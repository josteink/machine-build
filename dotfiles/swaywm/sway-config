# Hey Emacs, this is a -*- conf -*-
# This file should be placed in ~/.i3/config

# disable laptopscreen when lid closed!
set $laptop eDP-1
set $fujitsu DP-3
set $dell DP-4
set $fujitsu2 DP-5
set $dell2 DP-6

# monitors and order: (left to right)
# laptop (2560x1440) - fujitsu (1680x1050) - dell (1920x1080)

# normalize rendering-resolution of all panels to 1920x1080
output $laptop scale 1.333333
output $laptop pos 0 0 res 2560x1440
output $dell scale 1
output $dell pos 1920 0 res 1920x1080
output $fujitsu scale 0.875
output $fujitsu pos 3840 0 res 1680x1080

output $dell2 scale 1
output $dell2 pos 1920 0 res 1920x1080
Output $fujitsu2 scale 0.875
output $fujitsu2 pos 3840 0 res 1680x1080

# laptop HDMI output when not docked
output HDMI-A-2 scale 0.75

# disable laptop display on lid close
bindswitch lid:on output $laptop disable
bindswitch lid:off output $laptop enable


# laptop keys
input 1:1:AT_Translated_Set_2_keyboard {
    xkb_layout no
    xkb_variant ,nodeadkeys
    xkb_options ctrl:nocaps
}

# dinovo edge
input 1133:50963:Logitech_Logitech_BT_Mini-Receiver {
    xkb_layout no
    xkb_variant ,nodeadkeys
    xkb_options ctrl:nocaps
}



